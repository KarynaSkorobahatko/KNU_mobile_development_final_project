<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnShowLocation"
        android:layout_width="345dp"
        android:layout_height="45dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:text="Show Location"
        android:textColor="#00423C" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/latText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:text="Latitude: "
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/latTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:text="Latitude result "
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:text="Longitude: "
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lonTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Longitude result "
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnShowAddress"
        android:layout_width="345dp"
        android:layout_height="45dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:text="Show Address"
        android:textColor="#00423C" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:text="Adress_result "
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/address_lat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="20dp"
            android:hint="Latitude "
            android:inputType="numberSigned|numberDecimal"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/address_lon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:hint="Longitude"
            android:inputType="numberSigned|numberDecimal"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <Button
        android:id="@+id/btnShowAddressNew"
        android:layout_width="345dp"
        android:layout_height="45dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:text="Show Address 2"
        android:textColor="#00423C" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="75dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addressTextViewNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:text="Address_result_2 "
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnShowDistance"
        android:layout_width="345dp"
        android:layout_height="45dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:text="Show Distance"
        android:textColor="#00423C" />

    <TextView
        android:id="@+id/distanceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:text="Distance"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</LinearLayout>
